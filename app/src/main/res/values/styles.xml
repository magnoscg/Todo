<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="ToolbarPopup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TaskCard" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>

    <style name="TaskCard.Content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
    </style>

</resources>
